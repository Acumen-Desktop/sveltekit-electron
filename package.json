{
	"name": "sveltekit-electron",
	"version": "1.0.0",
	"description": "An Electron application with Svelte and TypeScript",
	"type": "module",
	"main": "./out/electron/main/index.js",
	"author": "example.com",
	"homepage": "https://www.electronjs.org",
	"scripts": {
		"typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
		"svelte-check": "svelte-check --tsconfig ./tsconfig.json",
		"typecheck": "npm run typecheck:node && npm run svelte-check",
		"start": "electron-vite preview",
		"dev": "electron-vite dev",
		"build": "npm run typecheck && electron-vite build",
		"postinstall": "electron-builder install-app-deps",
		"build:dev": "electron-builder --dir --config.developmentConfig",
		"build:win": "npm run build && electron-builder --win --config",
		"build:mac": "npm run build && electron-builder --mac --config",
		"build:linux": "npm run build && electron-builder --linux --config",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"dependencies": {
		"@electron-toolkit/preload": "^3.0.1",
		"@electron-toolkit/utils": "^3.0.0",
		"@tailwindcss/vite": "4.0.0-beta.5",
		"electron-serve": "^2.1.1",
		"electron-updater": "^6.3.9",
		"tailwindcss": "4.0.0-beta.5"
	},
	"devDependencies": {
		"@electron-toolkit/tsconfig": "^1.0.1",
		"@electron/notarize": "^2.5.0",
		"@sveltejs/adapter-static": "3.0.6",
		"@sveltejs/kit": "^2.9.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.1",
		"@types/cookie": "^0.6.0",
		"@types/node": "^22.10.1",
		"@typescript-eslint/eslint-plugin": "^8.17.0",
		"@typescript-eslint/parser": "^8.17.0",
		"electron": "^33.2.1",
		"electron-builder": "^25.1.8",
		"electron-vite": "^2.3.0",
		"eslint": "^9.16.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-svelte": "^2.46.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"svelte": "^5.7.1",
		"svelte-check": "^4.1.1",
		"svelte-preprocess": "^6.0.3",
		"tslib": "^2.8.1",
		"typescript": "^5.7.2",
		"vite": "^6.0.3"
	}
}
